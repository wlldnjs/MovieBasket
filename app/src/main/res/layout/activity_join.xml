<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.moviebasket.android.client.join.JoinActivity"
    android:background="@drawable/login_back">

    <!--12.26 지원-->
    <ImageView
        android:layout_marginTop="36dp"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:src="@drawable/signup_signup" />


    <LinearLayout
        android:layout_marginTop="29dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="@drawable/signup_line">

        <ImageView
            android:id="@+id/people"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_username"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:inputType="text"
            android:hint="Username"
            android:textColorHint="#ffff"
            android:background="@null"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/UsernameX"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_x"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:background="@drawable/signup_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_email"
            />
        <EditText
            android:id="@+id/email"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:inputType="textEmailAddress"
            android:hint="E-mail"
            android:textColorHint="#ffff"
            android:background="@null"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/E_mailX"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_x"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="@drawable/signup_line">

        <ImageView
            android:id="@+id/pw_icon"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_lock"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:inputType="textPassword"
            android:hint="password"
            android:textColorHint="#ffff"
            android:background="@null"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/pwX"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_x"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="@drawable/signup_line">

        <ImageView
            android:id="@+id/confirm_icon"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_lock"
            />
        <EditText
            android:id="@+id/confirm"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:paddingBottom="2dp"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textColorHint="#ffff"
            android:background="@null"
            android:textColor="#ffff"/>

        <ImageView
            android:id="@+id/CPX"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/signup_x"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/signupBtn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="258dp"
        android:src="@drawable/signup_signup_b"
        />

</LinearLayout>
