<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/login_back"
    tools:context="com.moviebasket.android.client.login.LoginActivity">

    <!--12.26 지원-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/login_logo"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_line">

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/login_email"/>

        <EditText
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:background="@null"
            android:textColor="#ffffff"
            android:hint="E-mail"
            android:textColorHint="#ffffff"/>
        <ImageView
            android:id="@+id/email_x"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/login_x"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_line">

        <ImageView
            android:id="@+id/pw_icon"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:src="@drawable/login_lock"/>

        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:hint="Password"
            android:textColor="#ffffff"
            android:background="@null"
            android:textColorHint="#ffffff"/>
        <ImageView
            android:id="@+id/pass_x"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:src="@drawable/login_x" />

    </LinearLayout>

   <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:background="@drawable/login_login_b"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="103dp"
        android:layout_marginRight="103dp"
        />

    <Button
        android:id="@+id/signup"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:background="@drawable/login_signup"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="257dp"
        />

</LinearLayout>
