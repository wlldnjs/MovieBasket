<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/search_ticket"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/movieImg"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="123dp"
        android:layout_weight="30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="라라랜드(2016)"
            android:textColor="#8e8a8b"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/director_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="감독/나라"
                android:textColor="#8e8a8b"
                android:textSize="13sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"

                android:text=" / "
                android:textColor="#8e8a8b"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/director_movie_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="감독/나라"
                android:textColor="#8e8a8b"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight="30">

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:text="별점"
            android:textColor="#8e8a8b"
            android:textSize="12dp"
            android:textStyle="bold"

            />

        <View
            android:id="@+id/search_underline"
            android:layout_width="31dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rating"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-5dp"
            android:background="#8e8a8b"
            android:src="@drawable/search_line" />

        <TextView
            android:id="@+id/scoreImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_underline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="8.0"
            android:textColor="#8e8a8b"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/search_star"
            android:layout_width="15dp"
            android:layout_height="76dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/search_star_one" />
    </RelativeLayout>

</RelativeLayout>