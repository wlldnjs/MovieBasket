<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/main_text"/>
        -->
    <android.support.v4.view.ViewPager
        android:id="@+id/imageViewPager"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#FFFFFF">


    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@id/imageViewPager"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        >
        <ImageView
            android:id="@+id/recommendbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_reco"/>
        <ImageView
            android:id="@+id/popularbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_pop"/>

        <ImageView
            android:id="@+id/newbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_recent_black"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

</RelativeLayout>
